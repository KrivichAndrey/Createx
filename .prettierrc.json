{
  "semi": true,
  "bracketSpacing": false,
  "singleAttributePerLine": false,
  "bracketSameLine": true,
  "printWidth": 120,
  "endOfLine": "auto",
  "tabWidth": 2,

  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "printWidth": 60,
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 80,
        "tabWidth": 2
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 135,
        "tabWidth": 3
      }
    }
  ]
}
